/* pages/my/my.wxss */
.header-container {
    display: flex;
    flex-direction: column;
    height: 500rpx;
    background-color: #fff;
    position: relative;
}

.image-back {
    width: 100%;
    height: 270rpx;
    z-index: 1;
    position: fixed;
}

.horizontalLayout {
    display: flex;
    flex-direction: row;
    z-index: 2;
    position: relative;
}

.headImage {
    width: 100rpx;
    height: 100rpx;
    margin-left: 26rpx;
    margin-top: 26rpx;
}

.textName {
    display: flex;
    flex-direction: column;
    position: relative;
}

.textTitle {
    margin-left: 20rpx;
    margin-top: 38rpx;
    font-size: 32rpx;
}

.textTitleTips {
    margin-left: 20rpx;
    margin-top: 10rpx;
    font-size: 20rpx;
}

.moneybox {
    box-shadow: 0px 2px 5px 5px ghostwhite;
    border-radius: 10rpx;
    margin: 36rpx;
    display: flex;
    width: 678rpx;
    background-color: white;
    height: 230rpx;
    flex-direction: row-reverse;
    z-index: 2;
    position: relative;
}

.moneyName {
    margin: 30rpx;
    width: 678rpx;
    display: flex;
    flex-direction: column;
    z-index: 1;
    position: fixed;
}

.moneytextTitle {
    font-size: 30rpx;
}

.moneytextTitleTips {
    font-size: 60rpx;
}
.dottedLine{
    width: 618rpx;
    border-top:1rpx #CDBA96 dashed;
    margin-top: 30rpx;
}
.moneyTips{
    font-size: 22rpx;
    margin-top: 14rpx;
    color: #CDBA96;
}
.money-button-box{
    display: flex;
    margin: 30rpx;
    flex-direction: column;
    position:relative;
}
.money-button-item{
    width: 160rpx;
    height: 50rpx;
    margin-bottom: 24rpx;
    font-size: 22rpx;
    text-align: center;
    line-height: 50rpx;
    background-color: #FFD700;
    border-radius: 20rpx;
}